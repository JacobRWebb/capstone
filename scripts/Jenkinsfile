pipeline{
  agent any

  environment {
    DOCKERHUB_CREDENTIALS=credentials('e2c2bcd4-1687-4007-8250-405c12a61aa1')
  }

  stages {
    stage('Build') {
      steps {
        sh 'docker build -t jacobwebb/capstone:latest .'
      }
    }
    stage('Login') {
      steps {
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
    }
    stage('Push') {
      steps {
        sh 'docker push jacobwebb/capstone:latest'
      }
    }
    stage("Deploy") {
      steps {
        sh 'chmod a+x ./script/deploy.sh'
        sh './script/deploy.sh'
      }
    }
    stage("Post") {
      steps {
        sh 'docker logout'
      }
    }
  }

}